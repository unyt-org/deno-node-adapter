{
	"ts-node": {
		// It is faster to skip typechecking.
		// Remove if you want ts-node to do typechecking.
		"transpileOnly": true,
		"esm": true
	},

	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "nodenext",
		"target": "es2020",
		"lib": ["es2020", "DOM"],
		"sourceMap": false,
		"strict": true,
		"rootDir": "./deno",
	},

	"exclude": ["node_modules", ".vscode-test"],
}